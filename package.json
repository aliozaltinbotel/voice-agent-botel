{
  "name": "botel-ai-voice-agent",
  "version": "1.0.0",
  "description": "Real-time voice SDR agent for Botel AI",
  "private": true,
  "workspaces": [
    "media-worker",
    "shared"
  ],
  "scripts": {
    "setup": "npm install && npm run setup:all",
    "setup:all": "npm run setup:media-worker",
    "setup:media-worker": "cd media-worker && npm install",
    "build": "npm run build:shared && npm run build:media-worker",
    "build:shared": "cd shared && npm run build",
    "build:media-worker": "cd media-worker && npm run build",
    "test": "npm run test:media-worker",
    "test:media-worker": "cd media-worker && npm test",
    "lint": "npm run lint:media-worker",
    "lint:media-worker": "cd media-worker && npm run lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "deploy:infra": "cd infra && pwsh deploy.ps1",
    "docker:build": "docker build -t ghcr.io/botel-ai/media-worker:latest ./media-worker",
    "docker:push": "docker push ghcr.io/botel-ai/media-worker:latest"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "@types/node": "^20.11.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/botel-ai/voice-agent.git"
  },
  "keywords": [
    "voice",
    "ai",
    "azure",
    "real-time",
    "communication",
    "sdr"
  ],
  "author": "Botel AI",
  "license": "PROPRIETARY"
} 